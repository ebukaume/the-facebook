<ul class="navbar-nav ml-auto">
	<li class="nav-item active">
		<div title='Profile'>
			<%= image_tag image_src_for(current_user, size: '25'), class: 'mt-2 rounded-circle' %>
			<%= link_to current_user.first_name, current_user, class: "float-right nav-link" %>
		</div>
	</li>
	<li class="nav-item">
		<%= link_to 'Home', root_path, class: "nav-link"%>
	</li>
	<li class="nav-item">
		<%= link_to 'Users', users_path, class: "nav-link"%>
	</li>
	<% if friend_requests.any? %>
		<li class="nav-item mt-2 mx-2 color-primary">
			<%= link_to icon('fas', 'user-friends'), friend_requests_path, title: pluralize(friend_requests.size, 'Friend Request'),
			 class: 'unread' %>
			<span class='badge badge-light'><%= friend_requests.size %> </span>
		</li>
	<% else %>
		<li class="nav-item mt-2 mx-2">
			<%= link_to icon('fas', 'user-friends'), friend_requests_path, title: 'No Friend Requests', class: data_class_for(:friend_request) %>
		</li>
	<% end %>
	<li class="nav-item mt-2 mx-2">
		<%= link_to icon('fas', 'bell'), '#', title: 'No Notifications', class: data_class_for(:notification) %>
	</li>
	<li class="nav-item dropdown">
		<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" 
		data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></a>
		<div class="dropdown-menu" aria-labelledby="navbarDropdown">
			<%= link_to 'Profile', user_path(current_user), class: 'dropdown-item' %>
			<div class="dropdown-divider"></div>
			<%= link_to 'Log Out', destroy_user_session_path, method: :delete, class: "dropdown-item"%>
		</div>
	</li>
</ul>  
