<header class="navbar navbar-inverse">
  <div class="container-fluid" style="background-color: rgb(61, 91, 153);">
      <div class="col-md-6">
          <h1 style='color:white;padding-left:1em;'>the facebook</h1>
      </div>

      <div class="col-md-6">
          <%= form_for :signin, :html =>{:class => "form-inline", :style => 'padding:0.5em;'} do |f| %>
          <div class="form-group">
              <div class="col-3">
                  <%= f.label :email, "Email", style: 'color:white;' %>
              </div>
              <%= f.text_field :email %>
          </div>
          <div class="form-group">
              <div class="col-3">
                  <%= f.label :password, "Password", style: 'color:white;' %>
              </div>
              <%= f.password_field :password %> 
              <%= f.submit "Log In", class:"btn-primary" %>
          </div>
          <%end%>
      </div>
  </div>
</header>
