<div class='container'>
  <div class='row'>
    <div class='col-md-6 mx-auto login p-5'>
      <div class='col-md-8 mx-auto'>
        <h2 class='col-12 mx-auto'>Log in to <%=app_name%></h2>
        <div class='col-12 mx-auto'>
          <%= render 'devise/shared/alert' %>
        </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class='row  mx-auto'>
            <div class="col-12 my-2">
              <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email" %>
            </div>

            <div class="col-12 my-2">
              <%= f.password_field :password, class: 'form-control', autocomplete: "current-password" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="col-12 my-2">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <div class="col-12 mb-2">
              <%= f.submit "Log in", class: 'btn btn-primary btn-block' %>
            </div>
          </div>
        <% end %>
          <div class='shared-links ml-3'>
            <%= render "devise/shared/links" %>
          </div>
      </div>
    </div>
  </div>
</div>