<div class='row'>
  <div class='col-md-10'>
    <section id='user-banner' class='d-flex' style="background-image: url(<%= @user.image + '?s=350' %>); background-size: cover; background-position: center;">
      <div id='interactions' class='row align-self-end d-flex'>
        <div class=' mb-3 ml-4 col-sm-3'>
          <%= image_tag "#{@user.image}?s=150", class: 'rounded-circle', alt: "user" %>
        </div>
        <%= link_to @user.fullname, @user, class: 'align-self-end mb-5 col' %>
        <div class='align-self-end offset-sm-1 mb-5'>
          <%= render 'users/friendship_button' %>
        </div>
      </div>
    </section>
  </div>
</div>
